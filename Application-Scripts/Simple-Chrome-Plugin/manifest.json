{
  "manifest_version": 3,
  "name": "Simple-Chrome-Plugin",
  "version": "1.0",
  "description": "Change the background color of the page",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./images/Genesis-Search.png",
      "48": "./images/Genesis-Search.png",
      "128": "./images/Genesis-Search.png"
    }
  },
  "icons": {
    "16": "./images/Genesis-Search.png",
    "48": "./images/Genesis-Search.png",
    "128": "./images/Genesis-Search.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
